    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongodb": "^4.3.1",
    "mongoose": "^6.1.8",
    "morgan": "^1.10.0",
    "npm": "^8.5.0",
