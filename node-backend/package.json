  "version": "1.0.0",
  "description": "A basic template for creating Restfull API using Node.js (TypeScript) Express and MongoDB",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "pretty": "node prettier --write .",
    "build": "tsc",
    "clean": "rimraf dist logs coverage",
    "test": "test=true jest --coverage --verbose",
    "test:watch": "jest --watch",
    "dev": "nodemon --exec \"npm run build && npm run start\" --watch src --ext ts",
    "start": "tsc && node ./dist/server.js"
