    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.21",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
